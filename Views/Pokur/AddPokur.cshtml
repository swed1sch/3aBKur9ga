@model SmokeTube.Models.Pokur

<h3 class="p-2 bg-danger text-white text-center">Add Pokures</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col font-weight-bold">Name of Tobacoo</div>
        <div class="col font-weight-bold">Price of Tobacco</div>
    </div>
    <form asp-action="AddPokur" method="post">
        <p>
            <label asp-for="NameOfTobacco">Name of Tobacco</label>
            <input asp-for="NameOfTobacco" />
        </p>
        <p>
            <label asp-for="PriceOfTobacco">Price of Tobacco</label>
            <input asp-for="PriceOfTobacco" />
        </p>
        <button class="btn btn-primary" type="submit">Done</button>
    </form>
</div>